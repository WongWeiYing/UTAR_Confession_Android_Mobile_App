<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="60dp">

    <LinearLayout
        android:id="@+id/ll_TopNav"
        style="@style/ScreenBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/bt_BackHome"
            style="@style/iv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            android:src="@drawable/baseline_arrow_back_24"
            tools:ignore="TouchTargetSizeCheck,RedundantDescriptionCheck" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".HelpFragment">

                <LinearLayout
                    android:id="@+id/ll_Help"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/help_btn"
                        android:textSize="22sp"
                        android:layout_marginVertical="10dp"
                        style="@style/TextColor"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        style="@style/aboutcv_style"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ques1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ques1"
                                style="@style/TextColor"
                                android:padding="5dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/ans1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ans1"
                                android:padding="5dp"
                                style="@style/TextColor"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        style="@style/aboutcv_style"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ques2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ques2"
                                style="@style/TextColor"
                                android:padding="5dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/ans2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ans2"
                                android:padding="5dp"
                                style="@style/TextColor"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        style="@style/aboutcv_style"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ques3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ques3"
                                style="@style/TextColor"
                                android:padding="5dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/ans3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ans3"
                                android:padding="5dp"
                                style="@style/TextColor"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        style="@style/aboutcv_style"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ques4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ques4"
                                style="@style/TextColor"
                                android:padding="5dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/ans4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ans4"
                                android:padding="5dp"
                                style="@style/TextColor"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        style="@style/aboutcv_style"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ques5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ques5"
                                style="@style/TextColor"
                                android:padding="5dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/ans5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ans5"
                                android:padding="5dp"
                                style="@style/TextColor"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        style="@style/aboutcv_style"
                        app:cardPreventCornerOverlap="false"
                        app:contentPadding="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ques6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ques6"
                                style="@style/TextColor"
                                android:padding="5dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/ans6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ans6"
                                android:padding="5dp"
                                style="@style/TextColor"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
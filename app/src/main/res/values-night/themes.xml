<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UtarCommunity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dark_cyan</item>
        <item name="colorPrimaryVariant">@color/dark_cyan</item>
        <item name="colorOnPrimary">@color/dark_dblue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white_word</item>
        <item name="android:fontFamily">@font/poe_sans_new</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="BarBackground"><item name="android:background">@color/dark_cyan</item></style>
    <style name="PostBackground"><item name="android:background">@color/dark_post</item></style>
    <style name="IBBackground"><item name="android:backgroundTint">@color/dark_post</item></style>
    <style name="NavBackground"><item name="android:background">@color/dark_post</item></style>
    <style name="Title"><item name="android:textColor">@color/dark_dblue</item></style>
    <style name="bottomsheet"><item name="android:textColorPrimary">@color/dark_dblue</item></style>
    <style name="cv_style"><item name="cardBackgroundColor">@color/dark_post</item></style>
    <style name="aboutcv_style"><item name="cardBackgroundColor">@color/light_dblue</item></style>
    <style name="iv_style"><item name="tint">@color/white</item></style>
    <style name="rules_style"><item name="cardBackgroundColor">@color/dark_yellow</item></style>
    <style name="TextColor"><item name="android:textColorPrimary">@color/white_word</item></style>
    <style name="non_ano"><item name="android:src">@drawable/dark_non_anonymous</item></style>
    <style name="ano"><item name="android:src">@drawable/dark_anonymous</item></style>
    <style name="send_icon"><item name="android:src">@drawable/baseline_send_24</item></style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Background color of the dialog -->
        <item name="android:background">#000000</item>
        <item name="android:textColor">@color/white_word</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_cyan</item>
        <item name="colorControlActivated">@color/light_cyan</item>
    </style>

</resources>